<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/antirevoke_category" >
        <rikka.preference.SimpleMenuPreference
            android:title="@string/antirevoke"
            android:summary="@string/antirevoke_sum"
            android:defaultValue="disable"
            android:key="antiRevoke"
            android:entries="@array/antirevoke_entries"
            android:entryValues="@array/antirevoke_values" />
        <rikka.preference.SimpleMenuPreference
            android:title="@string/antirevoke_status"
            android:summary="@string/antirevoke_status_sum"
            android:defaultValue="disable"
            android:key="antiRevokeStatus"
            android:entries="@array/antirevoke_entries"
            android:entryValues="@array/antirevoke_values"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/tab_calls" >
        <rikka.preference.SimpleMenuPreference
            android:title="@string/reject_call"
            android:summary="@string/reject_call_sum"
            android:defaultValue="disable"
            android:entries="@array/call_privacy_entries"
            android:entryValues="@array/call_privacy_values"
            android:key="reject_call"/>
        <rikka.material.preference.MaterialSwitchPreference
            android:summary="@string/reject_call_toast"
            android:key="reject_call_toast" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/viewonce" >
    <rikka.material.preference.MaterialSwitchPreference
        android:title="@string/viewonce"
        android:summary="@string/viewonce_sum"
        android:key="viewOnce"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/privacy_features" >
        <rikka.material.preference.MaterialSwitchPreference
            android:title="@string/freeze_last_seen"
            android:summary="@string/freeze_last_seen_sum"
            android:key="freeze_last_seen"/>
        <rikka.material.preference.MaterialSwitchPreference
            android:title="@string/hidereceipt"
            android:summary="@string/hidereceipt_sum"
            android:key="hideReceipt"/>
        <rikka.material.preference.MaterialSwitchPreference
            android:title="@string/hide_read"
            android:summary="@string/hide_read_sum"
            android:key="hide_read" />
        <rikka.material.preference.MaterialSwitchPreference
            android:title="@string/hide_typing"
            android:summary="@string/hide_typing_sum"
            android:key="hide_typing" />
        <rikka.material.preference.MaterialSwitchPreference
            android:title="@string/hide_recording"
            android:summary="@string/hide_recording_sum"
            android:key="hide_recording" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>